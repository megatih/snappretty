{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SnapPretty",
  "version": "0.1.0",
  "identifier": "com.snappretty.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "SnapPretty",
        "width": 1100,
        "height": 750,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: blob: data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Cross-platform screenshot beautifier",
    "longDescription": "SnapPretty is a desktop application that transforms plain screenshots into beautiful, shareable images. Add backgrounds, padding, rounded corners, and shadows to make your screenshots stand out.",
    "category": "Graphics and Design",
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0",
          "libayatana-appindicator3-1",
          "librsvg2-2",
          "libxdo3"
        ]
      },
      "rpm": {
        "depends": [
          "webkit2gtk4.1",
          "gtk3",
          "libayatana-appindicator-gtk3",
          "librsvg2",
          "xdotool"
        ]
      }
    }
  }
}
